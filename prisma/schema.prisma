datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  user_id   Int    @id @default(autoincrement())
  username  String
  email     String
  phone     String
  postcode  String
  number    Int
  password  String
}

model Product {
  product_id  Int    @id @default(autoincrement())
  name        String
  description String
  image_url   String
}

model Tags {
  tag_id Int @id @default(autoincrement())
  tag_name String @unique
}